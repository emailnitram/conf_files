    name = Fred Zirdung
    email = fred.zirdung@gmail.com
[branch]
    autosetupmerge = true
[push]
    default = current
[core]
	  autocrlf = input
    excludesfile = /Users/fred/.gitignore
[merge]
  tool = vimdiff
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    pom = push origin master
    br = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all
